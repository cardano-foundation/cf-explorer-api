        <sonar.coverage.exclusions>**/entity/*, **/validation/*</sonar.coverage.exclusions>
        <sonar.cpd.exclusions>**/entity/*, **/model/*</sonar.cpd.exclusions>
        <version.spring-cloud-aws>2.4.2</version.spring-cloud-aws>
        <version.apache.guava>31.1-jre</version.apache.guava>
        <version.pitest>1.14.2</version.pitest>
        <version.pitest-junit5>1.1.1</version.pitest-junit5>
